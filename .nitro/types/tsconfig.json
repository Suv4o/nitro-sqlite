{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "paths": {
      "#imports": [
        "./nitro-imports"
      ]
    },
    "lib": [
      "es2021"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "./nitro.d.ts",
    "../../**/*"
  ]
}